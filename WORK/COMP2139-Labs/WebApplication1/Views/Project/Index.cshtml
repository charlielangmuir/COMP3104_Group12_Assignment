@*We expect a list of Project as its model*@
@model List<Project>

@{
    ViewBag.Title = "Projects";
    Layout = "_Layout";
}

<h2>Projects</h2>

@if (Model.Any())
{
    //Iteration
    
    <table class="table">
        <thead>
        <th>ID</th>
        <th>Name</th>
        <th>Description</th>
        <th>Summary</th>
        <th>Actions</th>
        <!-- any other fields you desire* -->
        
        </thead>
        
        <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.ProjectId</td>
                <td>@project.Name</td>
                <td>@project.Description</td>
            </tr>
        }    
        </tbody>
            @foreach (var project in Model)
            {
                <tr>
                    <td>@project.ProjectId</td>
                    <p>@Html.DisplayFor(model :List<Project> => project.Name, templateName: "ProjectName")</p>
                    <p>@Html.DisplayFor(model :List<Project> => project.Description, templateName: "ProjectDescription")</p>
                    
                    <!-- Call reusable view component -->
                    <td>
                        @await Component.InvokeAsync("ProjectSummary", new { ProjectId = project.ProjectId })
                    </td>   
                    
                    <td>
                        <a asp-action="Details" asp-route-id="@project.ProjectId" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@project.ProjectId" class="btn btn-secondary">Edit</a>
                        <a asp-action="Delete" asp-route-id="@project.ProjectId" class="btn btn-danger">Delete</a>
                        
                        <!-- Link to view tasks for project -->
                        <a asp-controller="ProjectTask" asp-action="Index" asp-route-projectId="@project.ProjectId" class="btn btn-warning">View Tasks</a>
                    </td>
                </tr>
            }
    </table>
}
else
{
    if (searchPerformed)
    {
        <p>No project with string "@searchString" were found</p>
    }
    else
    {
        <p>No projects available</p>
    }
}