@model Project

@{
    ViewBag.Title = "Project Deatails";
    Layout = "_Layout";
}

<h2>Project Details</h2>
<div class="card">
    <div class="card-body">
        <div class="card-title">@Model.Name</div>
        <div class="card-text">@Model.Description</div>

        <dl class="row">
            <dt class="col-sm-3">Project ID</dt>
            <dt class="col-sm-9">@Model.ProjectId</dt>
            
            <dt class="col-sm-3">Start Date</dt>
            <dt class="col-sm-9">@Model.StartDate.ToShortDateString()</dt>

            <dt class="col-sm-3">End Date</dt>
            <dt class="col-sm-9">@Model.EndDate.ToShortDateString()</dt>

            <dt class="col-sm-3">Status</dt>
            <dt class="col-sm-9">@Model.Status</dt>
            <!--Add more properties here/ below-->
        </dl>
    </div>
    <a asp-controller="Project" asp-action="Edit" asp-route-id="@Model.ProjectId" class="btn btn-primary">Edit</a>
    <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Back to Project List</a>


</div>