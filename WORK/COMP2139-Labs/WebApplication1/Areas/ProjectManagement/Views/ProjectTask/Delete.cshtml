@model WebApplication1.Areas.ProjectManagement.Models.ProjectTask

@{
    ViewBag.Title = "Delete Task";
}

<h2>@ViewBag.Title</h2>
<h3>Are you sure you want to delete this task?</h3>

<table class="table">
    <tr>
        <th>Task ID</th>
        <td>@Model.ProjectTaskId</td>
    </tr>
    <tr>
        <th>Title</th>
        <td>@Model.Title</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Project ID</th>
        <td>@Model.ProjectId</td>
    </tr>
</table>

<form asp-area="ProjectManagement" asp-controller="ProjectTask" asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ProjectTaskId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" asp-route-projectId="@Model.ProjectId" class="btn btn-secondary">Cancel</a>
</form>

